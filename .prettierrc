{
	"semi": false,
	"useTabs": true,
	"singleQuote": false,
	"trailingComma": "all",
	"printWidth": 100,
	"plugins": ["prettier-plugin-svelte", "prettier-plugin-tailwindcss"],
	"overrides": [
		{
			"files": "*.svelte",
			"options": {
				"parser": "svelte",
				"singleAttributePerLine": false,
				"htmlWhitespaceSensitivity": "ignore"
			}
		},
		{
			"files": "*.html",
			"options": {
				"parser": "html",
				"printWidth": 999
			}
		}
	],
	"tailwindStylesheet": "./src/routes/layout.css"
}
