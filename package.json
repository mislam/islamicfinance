		"db:generate": "drizzle-kit generate",
		"db:migrate": "drizzle-kit migrate",
		"db:reset": "./scripts/db-reset.sh",
		"db:admin": "drizzle-kit studio",
		"auth:generate-secret": "node ./scripts/generate-auth-secret.js",
